<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-6xl font-bold">Don't wait !</h1>
            <a href="#order"> <button class="px-6 py-2 rounded-full text-white mt-4 btn-primary">Order Now</button> </a>
        </div>
        <div class="w-1/2">
            <img src="/img/hero-cafe.jpg" alt="cafe">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8" id="order">All Drinks & Eatries</h1>
    <div class="grid grid-cols-4 gap-y-12 gap-x-16">
        <% drinks.forEach(function(drinks){ %>
            <div class="w-64 mt-9">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= drinks.image %>" alt="Authentic">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= drinks.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase test-xs"><%= drinks.size %></span>
                    <div class="flex item-center justify-around mt-6 ">
                        <span class="font-bold text-lg">₹<%= drinks.price %></span>
                        <button data-drink="<%= JSON.stringify(drinks) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>  
        <% }) %>      
    </div>
</section>
<div class="footer mt-20">
    <div class="copyright text-center">
        <p>©2022 The Coffee House Cafe. All rights reserved.</p>
    </div>
</div>
