<section class="cart py-16">
    <% if(!session.cart) {%>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
             <h1 class="text-3l font-bold mb-2">Cart Empty ☹</h1>
            <p class="text-gray-500 text-lg mb-12">You probably have not ordered yet. <br>
                To order, go to the main page.
            </p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="">
            <a href="/" class="inline-block px-6 py-3 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>
    </div>
    <% } else { %>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items))  { %>
            <div class="flex item-center my-8">
                <img class="w-24" src="/img/<%=pizza.item.image %>" alt="">
                <div class="flex-1 ml-4">
                    <h1><%=pizza.item.name %></h1>
                    <span><%=pizza.item.size %></span>
                </div>
                  <span class="flex-1"><%=pizza.qty %></span>
                  <span class="font-bold text-lg  "><%=pizza.item.price %></span>
            </div>
            <% } %>
        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount: </span>
                <span class="amount text-2xl font-bold ml-2">₹<%=cart.totalPrice%></span>
            </div>
            <div>
                <form action="/orders" method="POST" class="mt-12">
                    <input type="text" name="name" id="" class="border border-gray-400 p-2 w-1/2 mb-4 " placeholder="Name" >
                    <input type="text" name="phone" id="" class="border border-gray-400 p-2 w-1/2" placeholder="Phone Number">
                    <div>
                        <% if(user) { %>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
                        <% } else { %>
                        <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% } %>

</section>
<div class="footer mt-20">
    <div class="copyright text-center">
        <p>©2022 The Coffee House Cafe. All rights reserved.</p>
    </div>
</div>